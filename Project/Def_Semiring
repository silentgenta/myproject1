class CommSemiRing (R : Type u) : Type (u+1)
  extends AddCommMonoidWithOne R, Mul R where
  -- 乗法の結合律・可換性
  mul_assoc  : ∀ a b c : R, (a * b) * c = a * (b * c)
  mul_comm   : ∀ a b   : R, a * b = b * a
  -- 単位元
  one_mul    : ∀ a : R, 1 * a = a
  mul_one    : ∀ a : R, a * 1 = a
  -- 零元
  zero_mul   : ∀ a : R, 0 * a = 0
  mul_zero   : ∀ a : R, a * 0 = 0
  -- 分配法則
  left_distrib  : ∀ a b c : R, a * (b + c) = a * b + a * c
  right_distrib : ∀ a b c : R, (a + b) * c = a * c + b * c
